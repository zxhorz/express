            KindEditor.ready(function(K) {
                window.editor = K.create('#info',
				{   width : '100%',
                    height:'350px',
					items:[]});
				$(document).ready(function() {
					$("#logoP").on("click",function(){
						window.location.href="/index";
					});

					$("#back").on("click",function(){
						window.location.href="/login";
					});
					//密码修改
					$("#save").on("click",function() {
						var oldpwd = $("#oldpwd").val();
						var newpwd = $("#newpwd").val();
						var newpwd2 = $("#newpwd2").val();
						var obj={
							oldpwd: oldpwd,
							newpwd: newpwd
						}
						console.log(obj);
						if(newpwd === '')
							$("#warning_content").html("请输入新密码");
						else if(newpwd !== newpwd2)
							$("#warning_content").html("两次密码输入不一致");

						else {
							$.ajax({
								type: 'POST',
								url: '/data/save',
								data: obj,
								success: function(data) {
									$("#warning_content").html(data.info);
								},
								error: function() {
									$("#warning_content").html("修改失败");
								},
								dataType: 'json'
							});
						}
					});

					function ToStr(str) {
						var res="";
						for(var i =0;i<str.length;i++){
							res=res+String.fromCharCode(str[i]);
						}
						return res;
					}

					//用户管理列表刷新
					$.ajax({
						type: 'POST',
						url: '/data/user_query',
						success: function(data){
							if(data.status){
								var obj = data.info;
								console.log(data.info);
								for(var i = 0 ; i < obj.length ; i++){
									if(data.info[i].img!==null)
										$("#userlist").append(
											'<div class="row" id = "'+ obj[i].username+"_listitem" +'"><img class="img-responsive col-xs-1" src="'
											+ ToStr(data.info[i].img.data) +
											'" style="height:100%"><div class="col-xs-3 ">'
											+ obj[i].username +
											'</div><div class="col-xs-4">'
											+ obj[i].email+
											'</div><div class="col-xs-4"><button class="btn btn-danger btn-xs deleteUser" data-toggle="modal" data-target="#deleteUser">删除</button></div></div>');
									else
										$("#userlist").append(
											'<div class="row" id = "'+ obj[i].username+"_listitem" +'"><div class="col-xs-1"></div><div class="col-xs-3 ">'
											+ obj[i].username +
											'</div><div class="col-xs-4">'
											+ obj[i].email+
											'</div><div class="col-xs-4"><button class="btn btn-danger btn-xs deleteUser" data-toggle="modal" data-target="#deleteUser">删除</button></div></div>');
								}
								$(".deleteUser").on("click",function() {
									var name = $(this).parent().parent().find("div:first-child").html();
									$("#delete").attr("name",name);
								})
							}
						},
						error: function() {

						},
						dataType: 'json'
					});


					$("#delete").on("click",function(){
						var name = $(this).attr("name");
						var obj = {
							username: name
						}
						$.ajax({
							type: 'POST',
							url: '/data/delete_user',
							data: obj,
							success: function(data) {
								$("#"+name+"_listitem").remove();
							},
							error: function() {

							},
							dataType: 'json'
						});
					})


					//资源管理列表刷新
					$.ajax({
						type: 'POST',
						url: '/data/admin_query',
						// data: obj,
						success: function(data) {
							if (data.status) {
								var obj = data.info;
								for(var i = 0 ; i < obj.length ; i++){
									switch(obj[i].flag){
										case 0:
											$('#listhead').append("<div class='row'><div class='col-lg-2 col-md-2 col-sm-2 col-xs-2 username levl3'>"
											+ obj[i].name +
											"</div><div class='col-lg-2 col-md-2 col-sm-2 col-xs-2 subject levl3'>"
											+ obj[i].subject+
											"</div><div class='col-lg-4 col-md-4 col-sm-4 col-xs-4 email'>"
											+ obj[i].email+
											"</div><div class='col-lg-4 col-md-4 col-sm-4 col-xs-4 '><button class='btn btn-success btn-xs infobutton' data-toggle='modal' data-target='#infoSource'>查看留言</button><button class='btn btn-success btn-xs agreebutton' data-toggle='modal' >同意</button><button class='btn btn-danger btn-xs rejectbutton' data-toggle='modal' data-target=''>拒绝</button></div></div>");
											break;
										case 1:
											$('#listhead').append("<div class='row'><div class='col-lg-2 col-md-2 col-sm-2 col-xs-2 username levl3'>"
											+ obj[i].name +
											"</div><div class='col-lg-2 col-md-2 col-sm-2 col-xs-2 subject levl3'>"
											+ obj[i].subject+
											"</div><div class='col-lg-4 col-md-4 col-sm-4 col-xs-4 email'>"
											+ obj[i].email+
											"</div><div class='col-lg-4 col-md-4 col-sm-4 col-xs-4 '><button class='btn btn-success btn-xs infobutton' data-toggle='modal' data-target='#infoSource'>查看留言</button><button class='btn btn-success btn-xs agreebutton' data-toggle='modal' data-target='' style='disabled:false'>已同意</button></div></div>");
											break;
										case 2:
											$('#listhead').append("<div class='row'><div class='col-lg-2 col-md-2 col-sm-2 col-xs-2 username levl3'>"
											+ obj[i].name +
											"</div><div class='col-lg-2 col-md-2 col-sm-2 col-xs-2 subject levl3'>"
											+ obj[i].subject+
											"</div><div class='col-lg-4 col-md-4 col-sm-4 col-xs-4 email'>"
											+ obj[i].email+
