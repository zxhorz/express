								$('.agreebutton').on("click",function(){
									var agreebutton = $(this);
									var rejectbutton = $(this).parent().find("button:eq(2)");
									var name = $(this).parent().parent().find("div:first-child").html();
									var subject =$(this).parent().parent().find("div:eq(1)").html();
