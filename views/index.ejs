		<script type="text/javascript">
			var editor;
            KindEditor.ready(function(K) {
                editor = K.create('#info',
					{
					    items:[
                            'source', '|', 'undo', 'redo', '|', 'preview', 'print', 'template', 'code', 'cut', 'copy', 'paste',
                            'plainpaste', 'wordpaste', '|', 'justifyleft', 'justifycenter', 'justifyright',
                            'justifyfull', 'insertorderedlist', 'insertunorderedlist', 'indent', 'outdent', 'subscript',
                            'superscript', 'clearhtml', 'quickformat', 'selectall', '|', 'fullscreen', '/',
                            'formatblock', 'fontname', 'fontsize', '|', 'forecolor', 'hilitecolor', 'bold',
                            'italic', 'underline', 'strikethrough', 'lineheight', 'removeformat', '|', 'insertfile', 'table', 'hr', 'emoticons', 'baidumap', 'pagebreak',
                            'anchor', 'link', 'unlink', '|', 'about'
                        ]
					});
                
			$('#btn').on('click', function() {
					editor.sync('#info');
					var username = $('#username').val();
					var email = $('#email').val();
					var subject = $('#subject').val();
					var info = $('#info').val();
					console.log(info);
					if(!(/\w{1,20}/).test(username)) {
						$("#ModalContent").html('用户名不符合格式(1~20个字母与数字组合)');
						$("#modal-button").on('click', function() {
							setTimeout(function() {
								$("#ModalContent").html('提交中');
							}, 1000);
						});
					} else if(!(/^[a-zA-Z0-9]{1,}@(([a-zA-z0-9]-*){1,}\.){1,3}[a-zA-z\-]{1,}$/).test(email)){
						$("#ModalContent").html('邮箱不符合格式');
						$("#modal-button").on('click', function() {
							setTimeout(function() {
								$("#ModalContent").html('提交中');
							}, 1000);
						});
					}
					else {
						var obj = {
							username: username,
							email: email,
							subject: subject,
							info: info
						};

						$.ajax({
							type: 'POST',
							url: '/data/submit',
							data: obj,
							success: function(data) {
								console.log(data);
								if(data.status) {
									$("#ModalContent").html('提交成功');
									$("#modal-button").on('click', function() {
										window.location.href = '/';
									});
								} else {
									if(data.info === "未登录") {
										$("#modal-button").html("登录");
										$("#modal-button").on('click', function() {
											window.location.href = '/login';
										});
									}
									$("#ModalContent").html(data.info);
								}
							},
							error: function() {
								$("#ModalContent").html('提交失败');
							},
							dataType: 'json'
						});
					}
				});
            });
		</script>
